create table ImagemLivro
( 
id int identity,
nome varchar (100) not null,
caminho varchar (400) not null,
Livro_id bigint not null,
statusImgLivro varchar (20) not null, -- ATIVO ou INATIVO

	primary key(id),
   	foreign key(Livro_id)
		references Livro(id)
)

